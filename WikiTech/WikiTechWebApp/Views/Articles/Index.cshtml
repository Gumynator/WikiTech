@model IEnumerable<WikiTechAPI.Models.Article>

@{
    ViewData["Title"] = "View";
}

<h1>Articles</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h4 class="">Search</h4>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>

            <div>
                <hr>
                <div class="list-group list-group">
                    <h4 class="">Tags</h4>

                    <a href="#" class="list-group-item"><span class="badge">14</span> Active item </a>
                    <a href="#" class="list-group-item"><span class="badge">3</span> Second item</a>
                    <a href="#" class="list-group-item"><span class="badge">25</span> Third item</a>
                    <a href="#" class="list-group-item"><span class="badge">14</span> Active item</a>
                    <a href="#" class="list-group-item"><span class="badge">3</span> Second item</a>
                    <a href="#" class="list-group-item"><span class="badge">25</span> Third item</a>
                    <a href="#" class="list-group-item"><span class="badge">14</span> Active item</a>
                    <a href="#" class="list-group-item"><span class="badge">3</span> Second item</a>

                    <hr class="">
                    <h4 class="">Catégorie</h4>
                    <a href="#" class="list-group-item"><span class="badge">14</span> Upcoming Sessions</a>
                    <a href="#" class="list-group-item"><span class="badge">3</span> OnDemand</a>
                </div>
            </div>

            <div class="hidden-sm hidden-xs">
                <hr>
                <div class="well">

                    <h4>Premium Membership</h4>
                    <p>Gain unlimited access to our entire course library.</p>
                    <button class="btn btn-sm btn-warning">Learn more</button>
                    <hr>
                    <p class="text-center ">Already a member? <a href="Identity/Account/Login">Connexion</a></p>
             </div>
            </div>

        </div>
        <div class="col-md-9">

            <div class="well hidden-xs">

                <div class="row">

                    <div class="col-xs-4">

                        <select class="form-control">
                            <option>Featured</option>
                            <option>Recently Added</option>
                            <option>Next Upcoming Session</option>
                            <option>A-Z</option>
                            <option>Z-A</option>
                        </select>
                    </div>
                </div>
            </div>
            <hr>

            @foreach (var item in Model)
            {
                <div class="row">
                    <!-- <div class="col-sm-4">
                            <a href="#" class=""><img src="http://placehold.it/1280X720" class="img-responsive"></a>
                        </div>-->
                    <div class="col-sm-8">
                        <h3 class="title">@Html.DisplayFor(modelItem => item.TitreArticle)</h3>
                        <p class="text-muted"><span class="glyphicon glyphicon-lock"></span>Contenu réservé au premium</p>
                        <p>@Html.DisplayFor(modelItem => item.DescriptionArticle)</p>
                        <p class="text-muted">Rédigé par <a href="#">@Html.DisplayFor(modelItem => item.IdNavigation.PrenomAspnetuser)</a> le @Html.DisplayFor(modelItem => item.DatepublicationArticle)</p>
                        <a asp-action="Details" asp-route-id="@item.IdArticle">->Consulter</a>
                    </div>
                </div>
                        <hr>
            }


            <ul class="pagination pagination-lg pull-right">
                <li><a href="#">«</a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">»</a></li>
            </ul>
        </div>
    </div>
</div>

